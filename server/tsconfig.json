
{
  "compilerOptions": {
    "types": ["express"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
        "@/*": ["src/*"]
    },
    "typeRoots": ["./src/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/utils/logger.ts","src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
